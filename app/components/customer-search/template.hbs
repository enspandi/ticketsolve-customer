{{yield (hash
    isOpen=isDropdownOpen
    trigger=(
      component 'ui-dropdown/-trigger'
        type='search'
        onFocusIn=(action 'focus')
        onFocusOut=(action 'blur')
        onInput=(action 'input')
    )
    dropdown=(
      component 'ui-dropdown/-dropdown'
        attachTo=element
        options=customers
        isOpen=isDropdownOpen
        isLoading=isLoading
        optionComponent='ui-customer-card'
        loadingText='searching...'
        createText='Create a new customer'
        noResultText='No customers found...'
        errorText=error
        onCreate=(action 'create')
        onSelect=(action 'select')
    )
  )
  keyword}}