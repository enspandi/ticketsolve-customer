{{yield (hash
    isOpen=isOpen
    trigger=(
      component 'ui-dropdown/-trigger'
        type='search'
        onFocusIn=(action 'open')
        onFocusOut=(action 'close')
        onInput=(action (perform debounceSearch))
    )
    dropdown=(
      component 'ui-dropdown/-dropdown'
        attachTo=element
        options=customers
        isOpen=isOpen
        isLoading=debounceSearch.isRunning
        optionComponent='ui-customer-card'
        loadingText='searching...'
        createText='Create a new customer'
        noResultText='No customers found...'
        onCreate=onCreate
        onSelect=(action 'select')
    )
  )
  keyword}}
