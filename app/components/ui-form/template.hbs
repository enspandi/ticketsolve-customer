{{yield (hash
  label=(component 'ui-form/label')
  input=(
    component 'ui-form/input' model=buffer
  )
  submit=(
    component 'ui-button'
      type='submit'
      disabled=(
        or (not buffer.hasChanges) (v-get buffer 'isInvalid')
      )
      isLoading=submitTask.isRunning
  ))
  buffer
}}